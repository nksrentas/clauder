{
  "name": "clauder",
  "displayName": "Clauder",
  "description": "Track your Claude Code usage directly in VS Code. Shows real-time session and weekly utilization with color-coded status bar indicator.",
  "version": "0.1.6",
  "publisher": "nrentas",
  "author": {
    "email": "nksrentas@gmail.com",
    "name": "Nick Rentas"
  },
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/nksrentas/clauder"
  },
  "homepage": "https://github.com/nksrentas/clauder#readme",
  "bugs": {
    "url": "https://github.com/nksrentas/clauder/issues"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "keywords": [
    "claude",
    "anthropic",
    "usage",
    "tracker",
    "ai",
    "status bar"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "clauder.refresh",
        "title": "Clauder: Refresh"
      },
      {
        "command": "clauder.installShellIntegration",
        "title": "Clauder: Install Shell Integration"
      },
      {
        "command": "clauder.toggleProgress",
        "title": "Clauder: Toggle Progress Display"
      }
    ],
    "configuration": {
      "title": "Clauder",
      "properties": {
        "clauder.plan": {
          "type": "string",
          "default": "pro",
          "enum": [
            "pro",
            "max5",
            "max20"
          ],
          "enumDescriptions": [
            "Pro Plan ($20/month)",
            "Max 5x Plan ($100/month)",
            "Max 20x Plan ($200/month)"
          ],
          "description": "Your Claude subscription plan"
        },
        "clauder.refreshInterval": {
          "type": "number",
          "default": 30,
          "minimum": 5,
          "maximum": 300,
          "description": "Refresh interval in seconds"
        },
        "clauder.weeklyHighlightThreshold": {
          "type": "number",
          "default": 90,
          "minimum": 50,
          "maximum": 100,
          "description": "Weekly utilization percentage to start showing weekly usage alongside session"
        },
        "clauder.statusDisplay": {
          "type": "string",
          "default": "both",
          "enum": [
            "both",
            "vscode",
            "shell"
          ],
          "enumDescriptions": [
            "Show usage in both VS Code status bar and shell",
            "Show usage in VS Code status bar only",
            "Show usage in shell statusline only"
          ],
          "description": "Where to display Claude usage status"
        },
        "clauder.showProgress": {
          "type": "boolean",
          "default": true,
          "description": "Show Claude Code usage progress in the status bar"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "package": "vsce package",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@vitest/coverage-v8": "^4.0.16",
    "esbuild": "^0.19.0",
    "prettier": "^3.7.4",
    "typescript": "^5.3.0",
    "vitest": "^4.0.15"
  }
}
